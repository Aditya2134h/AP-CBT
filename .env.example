# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/cbt-system
MONGODB_URI_ATLAS=mongodb+srv://<username>:<password>@cluster0.mongodb.net/cbt-system?retryWrites=true&w=majority

# NextAuth.js Configuration
NEXTAUTH_SECRET=your-super-secret-key-here-at-least-32-characters-long
NEXTAUTH_URL=http://localhost:3000

# Claude API Configuration
CLAUDE_API_KEY=your-claude-api-key-here
CLAUDE_API_URL=https://api.anthropic.com/v1/messages

# JWT Configuration
JWT_SECRET=your-jwt-secret-key-here
JWT_EXPIRES_IN=1d
JWT_REFRESH_EXPIRES_IN=7d

# Session Configuration
SESSION_MAX_AGE=86400 # 24 hours in seconds
SESSION_UPDATE_AGE=3600 # 1 hour in seconds

# Security Configuration
ENCRYPTION_KEY=your-32-character-encryption-key-here
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
ALLOWED_IPS=127.0.0.1,::1

# File Upload Configuration
MAX_FILE_SIZE=10485760 # 10MB
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,audio/mpeg,video/mp4
UPLOAD_DIR=./public/uploads

# Email Configuration
EMAIL_SERVER=smtp://smtp.example.com:587
EMAIL_FROM=no-reply@cbt-system.com
EMAIL_USER=your-email@example.com
EMAIL_PASSWORD=your-email-password

# Rate Limiting
RATE_LIMIT_WINDOW=15 # minutes
RATE_LIMIT_MAX=100 # requests per window

# Webcam Proctoring
WEBCAM_ENABLED=true
WEBCAM_INTERVAL=30000 # 30 seconds
WEBCAM_QUALITY=0.7 # 70% quality

# Test Configuration
TEST_AUTO_SAVE_INTERVAL=5000 # 5 seconds
TEST_SYNC_INTERVAL=10000 # 10 seconds
TEST_MAX_ATTEMPTS=3
TEST_GRACE_PERIOD=300 # 5 minutes

# Analytics Configuration
ANALYTICS_ENABLED=true
ANALYTICS_RETENTION_DAYS=365

# Docker Configuration
DOCKER_PORT=3000
DOCKER_MONGO_PORT=27017
DOCKER_REDIS_PORT=6379

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_PREFIX=cbt:

# Application Configuration
APP_NAME=CBT System
APP_VERSION=1.0.0
APP_ENV=development
APP_DEBUG=true

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log
LOG_MAX_SIZE=10485760 # 10MB
LOG_MAX_FILES=5

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_DIR=./backups
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 0 * * * # Daily at midnight